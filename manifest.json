{
    "manifest_version": 3,
    "name": "Umbric - Google Maps Utility",
    "version": "1.0",
    "description": "Easily scrape location data from Google Maps",
    "permissions": [
        "activeTab",
        "scripting",
        "webRequest",
        "webNavigation",
        "storage"
    ],
    "host_permissions": [
        "*://*.google.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "map.png",
        "128": "map.png"
    }
}
  