{
    "manifest_version": 3,
    "name": "Umbric - RV Park Scraper",
    "version": "1.0",
    "description": "Easily scrape location data from Google Maps for RV Parks",
    "permissions": [
        "activeTab",
        "scripting",
        "webRequest",
        "webNavigation",
        "storage"
    ],
    "host_permissions": [
        "*://*.google.com/*",
        "*://*.openai.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [{
        "resources": ["openai.js", "config.js"],
        "matches": ["<all_urls>"]
    }],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "map.png",
        "128": "map.png"
    }
}
  